<h1>投稿一覧</h1>

<table width='100%' border='1'>
  <tr>
    <th>No.</th>
    <th>縦書</th>
    <th>タイトル</th>
    <th>本文</th>
    <th>投稿日</th>
  </tr>

<% stripes = [ 'aliceblue', '#d3d9bf' ] %>
<% @posts.each_with_index do |post, i| %>
  <tr bgcolor=<%= stripes.push(stripes[0]).shift %>>
    <td align='middle'><%= i+1 %></td>
    <td><%= link_to('縦書', "posts/#{i+1}")%></td>
    <td><%= post.title %></td>
    <td><%= post.body %></td>
    <td><%= post.created_at.localtime.strftime("%Y/%m/%d %H:%M:%S") %></td>
  </tr>
<% end %>
</table>
